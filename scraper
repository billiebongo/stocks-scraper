FILE = 't6.xlsx'

INDIV_SHEETS = ["CAD", "CHF", "GBP", "JPY", "EUR", "NZD", "USD",
                "AUD", "Nikkei", "Dow Jones", "Silver", "Gold", "Oil"]

# CHICAGO MERCANTILE EXCHANGE
CURRENCIES = {
    "CAD" : 90741,
    "CHF" : 92741,
    "GBP" : 96742,
    "YEN" : 97741,
    "EURO" : 99741,
    "NZD" : 112741,
    "AUD" : 232741,
    "Nikkei" : 240741
